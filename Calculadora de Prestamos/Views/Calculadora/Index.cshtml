
@model Calculadora_de_Prestamos.Models.CalculadoraViewModel




<div class="row">

    <div class="col-md-6 offset-3 mt-5">
        <div class="card">
            <div class="card-header bg-dark bg-gradient text-white text-center">
                <h3>Calcular Prestamo Personal</h3>
            </div>
            <div class="card card-body bg-info bg-gradient fs-4">
                <form method="post" asp-controller="Calculadora" asp-action="NewAction">
                    <div class="mb-3">
                        <label asp-for="Monto" class="form-label">Monto :</label>
                        <input type="number" class="form-control" asp-for="Monto" name="Monto" id="Monto"  >
                    </div>

                    <div class="mb-3">
                         <label class="form-label" asp-for="TipoPrestamos">Seleccione el mes:</label>
                        <select class="form-select" asp-for="TipoPrestamos" name="TipoPrestamos" id="TipoPrestamos" onclick = "Action()" >
                            <option value="1">Personal</option>
                            <option value="2">Automovil</option>
                            <option value="3">Hipotecario</option>
                        </select>
                    </div>

                    
                    
                    @**@
                    <div class="mb-3">
                        @{Model.TasaInteres = "22 %";}
                        <label asp-for="TasaInteres" class="form-label" >Tasa de Interes :</label>
                        <input type="text" class="form-control"  asp-for="TasaInteres" name="TasaInteres" id="TasaInteres" value= "@Model.TasaInteres" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Meses">Cantidad de Meses:</label>
                        <select class="form-select" asp-for="Meses" name="Meses" id="Meses" >
                            <option value="1">12</option>
                            <option value="2">18</option>
                            <option value="3">24</option>
                            <option value="4">30</option>
                            <option value="5">36</option>
                            <option value="6">42</option>
                            <option value="7">48</option>
                            <option value="8">54</option>
                            <option value="9">60</option>
                            <option value="10">66</option>
                            <option value="11">72</option>
                            <option value="12">78</option>
                            <option value="13">84</option>
                            <option value="14">90</option>
                            <option value="15">96</option>
                            <option value="16">102</option>
                            <option value="17">108</option>
                            <option value="18">114</option>
                            <option value="19">120</option>                          

                        </select>
                    </div>

                     <div class="mt-3 text-center ">
                    <button type="submit" class="btn btn-dark bg-gradient">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calculator" viewBox="0 0 16 16">
  <path d="M12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h8zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4z"/>
  <path d="M4 2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-2zm0 4a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm3-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1zm0 3a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-4z"/>
</svg>
                        Calcular
                        </button>
                      </div>


                </form>
            </div>
        </div>
    </div>

</div>


        <script type="text/javascript">


                        function Action(){                            
                             //Getting the Select's Id
                        const combo = document.getElementById("TipoPrestamos");
                        var indiceSeleccionado = combo.selectedIndex;

                        var opcionSeleccionada = combo.options[indiceSeleccionado];

                        //Getting the Selected option value
                        var valorSeleccionado = opcionSeleccionada.value;

                        //Getting the input ID
                        var valor = document.getElementById("TasaInteres");

                        if(valorSeleccionado == 1){
                        valor.value = "22 %";
                        }
                        else if(valorSeleccionado == 2){
                         valor.value = "12 % ";
                        }
                         else if(valorSeleccionado == 3){
                         valor.value = "8 %";
                        }

                            }
                    

           </script> 
